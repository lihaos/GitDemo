	<script type="text/javascript">
		$("[name=yeMa]").click(function tiao(){
			var page=$("[name=page]").val();
			var zong=$("[name=zong]").val();
			var num = $(this).val();
			if(num=="首页"){
				page=1;
			}else if(num=="上一页"){
				page=page-1;
			}else if(num=="下一页"){
				page=+page+1;
			}else if(num=="尾页"){
				page=zong;
			}
			location="/demoTest?page="+page;
		})
		
		//productName
		 function chakan(id){
			$.ajax({
				url:"/demo1",
				data:{"productId":id},
				async:"true",
				type:"post",
				success:function(data){
				alert(data);
				},
				error:function(){
					alert("error");
				}
			});
		} 
		
</script>
