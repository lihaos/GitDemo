	function loadList(objList){
		var arrr= new Array();
		$(objList).each(function(){
			var $obj=this

		  var a =[$obj.questionId,($obj.type==1?'多选':'单选'),$obj.title,$obj.subject.subjectName,($obj.questionLevel==0?'普通':$obj.questionLevel==1?'中等':'困难'),
			  [ {
				label : '删除',
				onclick : function() {
					deleteQuestion($obj.questionId);
				}
			}, {
				label : '编辑',
				onclick : function() {
					updateQuestion($obj.questionId);
				}
			} ]
		  ];
			arrr.push(a)
		});
		
		$('.grid').Grid({
			thead : head,
			tbody : null,
			height : 250,
			checkbox : {
				single : true
			},
			operator : {
				type : "normal",
				width : 100
			},
			sortCallBack : function(name, index, type) {
				alert(name + "," + index + ',' + type);
			}

		});
		
			$('.grid').Grid('setData', arrr, head);
	
		
	}
	 


