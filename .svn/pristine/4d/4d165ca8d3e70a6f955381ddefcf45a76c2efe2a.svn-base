	function searchUser(index) {  
		var userCount = 0;//符合查找条件的用户总页数，分页参考  
		$(".pagination").children().remove();
	    var title = $('#userCode').val();  
	    $.ajax({
    		type : "POST",  
	        url : "findQuestionCount",  
	        data : {  
	        	title : title
	        },  
	        async : true,  
	        success : function(count) { 
	        	userCount = count;
	        },error : function() {  
	            alert("error！");  
	        }
    	});
	    $.ajax({  
	        type : "POST",  
	        url : "findQuestion",  
	        data : {  
	        	title : title,  
	            pageIndex:index
	        },  
	        async : true,  
	        success : function(data) {  
	        	loadList(data);
	        	
	        	
	        	var page="";
				if(index==1){
					page+="<li class='disabled'><a href='javascript:void(0);'>&laquo;</a></li>";
	        	}else{
	        		page+="<li><a href='javascript:void(0);' onclick='searchUser("+(index-1)+")'>&laquo;</a></li>";
	        	}
	        	userCount=Math.ceil(userCount/5);
	        	for(var i = 1;i<=userCount;i++){
	        		if(i==index){
	        			page+="<li class='active'> <a href='javascript:void(0);'>"+i+"</a></li>";
	        		}else{
	        			page+="<li> <a href='javascript:void(0);' onclick='searchUser("+i+")'>"+i+"</a></li>";
	        		}
	        	}
	        	
	        	if(index==userCount){
	        		page+="<li class='disabled'><a  href='javascript:void(0);'>&raquo;</a></li>";
	        	}else{
	        		page+="<li><a href='javascript:void(0);' onclick='searchUser("+(index+1)+")'>&raquo;</a></li>";
	        	}
	        	
	            $(".pagination").append(page);  
	            },error : function() {  
		            alert("error！");  
		        }   
	    });  
	}
	function deleteQuestion(data){
		if(confirm("确认删除吗?")){
			$.ajax({
					type:"post",
			        url :[[@{/deleteQuestion}]],  
			        dataType:"text",
			        data : {  
			        	questionId : data,  
			        },  
			        async : true,  
			        success : function(result) {
			        	if(result>=1){
			        		alert("删除成功");
			        		searchUser(1);
			        	}
			        	
			        },error:function(){
			        	alert("error!");
			        }
			});
		}
	}
	
